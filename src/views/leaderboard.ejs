<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<header>
    <h1>Leaderboard</h1>
    <nav>
        <a href="/">Strona główna</a>
        <a href="/chat">Czat</a>
        <a href="/auth/logout">Wyloguj</a>
    </nav>
    <hr>
</header>

<main>
    <form method="GET" action="/leaderboard">
        <label>Sortowanie:</label>
        <select name="sort" onchange="this.form.submit()">
            <option value="desc" <%= sort !== 'asc' ? 'selected' : '' %>>Najwięcej punktów</option>
            <option value="asc" <%= sort === 'asc' ? 'selected' : '' %>>Najmniej punktów</option>
        </select>
    </form>

    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>Użytkownik</th>
                <th>Punkty</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(u => { %>
                <tr>
                    <td><a href="/user/<%= u._id %>"><%= u.username %></a></td>
                    <td><%= u.points %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</main>

<footer>
    <hr>
    <p>Temex &copy; 2025</p>
</footer>
</body>
</html>
